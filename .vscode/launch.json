{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "_server",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/frontend",
      "presentation": {
        "hidden": true
      }
    },
    {
      "name": "_chrome",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:3100/",
      "webRoot": "${workspaceFolder}/frontend",
      "sourceMaps": true,
      "pathMapping": {
        "/": "${workspaceFolder}/frontend",
        "/@/": "${workspaceFolder}/frontend/src/"
      },
      "presentation": {
        "hidden": true
      }
    },
    {
      "name": "_edge",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:3100/",
      "webRoot": "${workspaceFolder}/frontend",
      "sourceMaps": true,
      "pathMapping": {
        "/": "${workspaceFolder}/frontend",
        "/@/": "${workspaceFolder}/frontend/src/"
      },
      "presentation": {
        "hidden": true
      }
    }
  ],
  "compounds": [
    {
      "name": "Launch Chrome Debugger",
      "configurations": ["_server", "_chrome"],
      "stopAll": true,
      "presentation": {
        "order": 1
      }
    },
    {
      "name": "Launch Edge Debugger",
      "configurations": ["_server", "_edge"],
      "stopAll": true,
      "presentation": {
        "order": 2
      }
    }
  ]
}
